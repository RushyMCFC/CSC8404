import java.util.Random;


public class RegistrationNumber {
	public final String firstPart;
	public final String secondPart;
	private final String carRegistrationNumber;
	
//	public RegistrationNumber(String fp, String sp) {
//		firstPart = fp;
//		secondPart  = sp;
//		carRegistrationNumber = fp+" "+sp;
//	}
	
	public RegistrationNumber() {
		Random rand = new Random();
		String p1 = (rand.nextInt((90 - 65) + 1) + 65) + "";
		String p2 = (rand.nextInt((90 - 65) + 1) + 65) + "";
		String p3 = (rand.nextInt(10)) + "";
		String p4 = (rand.nextInt(10)) + "";
		String p5 = (rand.nextInt((90 - 65) + 1) + 65) + "";
		String p6 = (rand.nextInt((90 - 65) + 1) + 65) + "";
		String p7 = (rand.nextInt((90 - 65) + 1) + 65) + "";
		firstPart = p1+p2+p3+p4;
		secondPart = p5+p6+p7;
		carRegistrationNumber = firstPart+" "+secondPart;
	}
	
	private void generateRandomRegNo() {
		Random rand = new Random();
		String p1 = (rand.nextInt((90 - 65) + 1) + 65) + "";
		String p2 = (rand.nextInt((90 - 65) + 1) + 65) + "";
		String p3 = (rand.nextInt(10)) + "";
		String p4 = (rand.nextInt(10)) + "";
		String p5 = (rand.nextInt((90 - 65) + 1) + 65) + "";
		String p6 = (rand.nextInt((90 - 65) + 1) + 65) + "";
		String p7 = (rand.nextInt((90 - 65) + 1) + 65) + "";
		firstPart = p1+p2+p3+p4;
		secondPart = p5+p6+p7;
		carRegistrationNumber = firstPart+" "+secondPart;
	}
	
	public String getRegNumber() {
		return carRegistrationNumber;
	}
	
	public String getFirstPart() {
		return firstPart;
	}
	
	public String getSecondPart() {
		return secondPart;
	}
	
	public static void main(String[] args) {
		Car obj = new LargeCar(new RegistrationNumber("NG57","HXE"),55.0);
		
		System.out.println(obj.drive(95));
		System.out.println(obj);
		
	}
}
